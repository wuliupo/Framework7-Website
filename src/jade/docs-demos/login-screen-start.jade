extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Start From Login Screen
              .right 
          .page-content
            .content-block
              p
                a(href="#").open-login-screen Open Login Screen
  .login-screen.modal-in
    .view
      .page
        .page-content.login-screen-content
          .login-screen-title My App
          form
            .list-block
              ul
                li.item-content
                  .item-inner 
                    .item-title.label Username
                    .item-input
                      input(type="text", name="username", placeholder="Your username")
                li.item-content
                  .item-inner 
                    .item-title.label Password
                    .item-input
                      input(type="password", name="password", placeholder="Your password")
            .list-block
              ul
                li
                  a(href="#").item-link.list-button Sign In
              .list-block-label 
                p Click Sign In to close Login Screen
  

block scripts
  script.
    var myApp = new Framework7();

    var $$ = Dom7;

    $$('.login-screen .list-button').on('click', function () {
      var username = $$('.login-screen input[name="username"]').val();
      var password = $$('.login-screen input[name="password"]').val();
      myApp.alert('Username: ' + username + ', Password: ' + password, function () {
        myApp.closeModal('.login-screen');
      });
    });
    