extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Swipeout
              .right 
          .page-content
            .content-block-title On right side
            .list-block
              ul
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item title
                      .item-after Label
                  .swipeout-actions-right
                    a(href="#").action1 Action 1
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item with badge
                      .item-after 
                        span.badge.bg-green 5
                  .swipeout-actions-right
                    a(href="#").action1.bg-orange Action 1
                    a(href="#").action2 Action 2
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
