extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Lazy Loading
              .right 
          .page-content
            .swiper-container
              .swiper-wrapper
                .swiper-slide 
                  <img data-src="http://lorempixel.com/1600/1200/nature/1" class="swiper-lazy">
                  .preloader
                .swiper-slide 
                  <img data-src="http://lorempixel.com/1600/1200/nature/2" class="swiper-lazy">
                  .preloader
                .swiper-slide 
                  <img data-src="http://lorempixel.com/1600/1200/nature/3" class="swiper-lazy">
                  .preloader
                .swiper-slide 
                  <img data-src="http://lorempixel.com/1600/1200/nature/4" class="swiper-lazy">
                  .preloader
                .swiper-slide 
                  <img data-src="http://lorempixel.com/1600/1200/nature/5" class="swiper-lazy">
                  .preloader
              .swiper-pagination.color-white


block scripts
  style.
    .swiper-container {
      height: 100%;
    }
    .swiper-slide {
      background: #000;
      position: relative;
      height: 100%;
    }
    .swiper-slide img {
      position: absolute;
      left:50%;
      top:50%;
      max-width: 100%;
      max-height: 100%;
      width: auto;
      height: auto;
      -webkit-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
    }
  script.
    var myApp = new Framework7(); 
    var mySwiper = new Swiper('.swiper-container', {
      preloadImages: false,
      lazyLoading: true,
      pagination: '.swiper-pagination'
    })