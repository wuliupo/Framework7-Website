extends _layout-ios
block content
  .views
    .view.view-main
      .navbar
        .navbar-inner
          .left 
          .center.sliding Smart Select With Images
          .right 
      .pages.navbar-through
        .page(data-page="home")
          .page-content
            .list-block
              ul
                li
                  a(href="#").item-link.smart-select
                    select(name="fruits")
                      option(value="apple", selected=true, data-option-image="http://lorempixel.com/29/29/") Apple
                      option(value="pineapple", data-option-image="http://lorempixel.com/29/29/?2") Pineapple
                      option(value="pear", data-option-color="orange", data-option-image="http://lorempixel.com/29/29/?3") Pear
                      option(value="orange", data-option-image="http://lorempixel.com/29/29/?4") Orange
                      option(value="melon", data-option-image="http://lorempixel.com/29/29/?5") Melon
                      option(value="peach", data-option-image="http://lorempixel.com/29/29/?6") Peach
                      option(value="banana", data-option-image="http://lorempixel.com/29/29/?7") Banana
                    .item-content
                      .item-inner
                        .item-title Fruit

block scripts
  script.
    var myApp = new Framework7({
      animateNavBackIcon:true
    }); 
    var mainView = myApp.addView('.view-main', {
      dynamicNavbar: true,
    });