extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Login Screen With JavaScript
              .right 
          .page-content
            .content-block
              p
                a(href="#").open-login Open Login Screen
  .login-screen
    .view
      .page
        .page-content.login-screen-content
          .login-screen-title My App
          form
            .list-block
              ul
                li.item-content
                  .item-inner 
                    .item-title.label Username
                    .item-input
                      input(type="text", name="username", placeholder="Your username")
                li.item-content
                  .item-inner 
                    .item-title.label Password
                    .item-input
                      input(type="password", name="password", placeholder="Your password")
            .list-block
              ul
                li
                  a(href="#").item-link.list-button Sign In
              .list-block-label 
                p Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                p
                  a(href="#").close-login-screen Close Login Screen
  

block scripts
  script.
    var myApp = new Framework7();

    var $$ = Dom7;

    $$('.open-login').on('click', function () {
      myApp.loginScreen();
    });
    