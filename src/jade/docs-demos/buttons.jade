block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Buttons
              .right 
          .page-content
            .content-block-title Usual Buttons
            .content-block
              p 
                a(href="#").button Usual Button 1
              p 
                a(href="#").button Usual Button 2
              p 
                a(href="#").button Usual Button 3
            .content-block-title Active Button
            .content-block
              p 
                a(href="#").button.active Active Button
            .content-block-title Round Buttons
            .content-block
              p 
                a(href="#").button.button-round Round Button 1
              p 
                a(href="#").button.button-round Round Button 2
              p 
                a(href="#").button.button-round.active Round Button Active
            .content-block-title Big Buttons
            .content-block
              p 
                a(href="#").button.button-big Big Button 
              p 
                a(href="#").button.button-big.button-round Big Round Button 
              p 
                a(href="#").button.button-big.button-round.active Big Round Active Button 
            .content-block-title Buttons Row / Segmented Controller
            .content-block
              p.buttons-row 
                a(href="#").button Button 1
                a(href="#").button Button 2
                a(href="#").button Button 3
              p.buttons-row 
                a(href="#").button.active Button 1
                a(href="#").button Button 2
                a(href="#").button Button 3
              p.buttons-row 
