extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Swipeout Events
              .right 
          .page-content
            .content-block-title Try to delete item
            .list-block
              ul
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item title
                      .item-after Label
                  .swipeout-actions-right
                      a(href="#").action1 Action 1
                      a(href="#", data-confirm="Are you sure want to delete this item?").swipeout-delete Delete
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title With confirm title
                      .item-after 
                        span.badge 5
                  .swipeout-actions-right
                      a(href="#").action1 Action 1
                      a(href="#", data-confirm="Are you sure want to delete this item?", data-confirm-title="Delete?").swipeout-delete Delete
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Another item
                      .item-after Another label
                  .swipeout-actions-right
                      a(href="#").action1 Action 1
                      a(href="#", data-confirm="Are you sure want to delete this item?").swipeout-delete Delete
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title With confirm title
                      .item-after Label
                  .swipeout-actions-right
                      a(href="#").action1 Action 1
                      a(href="#", data-confirm="Are you sure want to delete this item?", data-confirm-title="Delete?").swipeout-delete Delete
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item with badge
                      .item-after 
                        span.badge 5
                  .swipeout-actions-right
                      a(href="#").action1 Action 1
                      a(href="#", data-confirm="Are you sure want to delete this item?").swipeout-delete Delete
                li.swipeout
                  .swipeout-content.item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title You can't delete me
                      .item-after Another label
                  .swipeout-actions-right
                      a(href="#").action1 Action

block scripts
  script.
    var myApp = new Framework7();

    var $$ = Dom7;

    $$('.swipeout').on('deleted', function () {
      myApp.alert('Item removed');
    });

    $$('.swipeout').on('swipeout', function (e) {
      console.log('Item opened on: ' + e.detail.progress + '%');
    });
