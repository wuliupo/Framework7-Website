extends _layout-ios
block content
  .views
    .view.view-main
      .pages
        .page(data-page="home").navbar-fixed
          .navbar
            .navbar-inner
              .left 
              .center Sortable API
              .right 
          .page-content
            .content-block 
              p
                a(href="#").open Enable sortable
              p
                a(href="#").close Disable sortable
              p
                a(href="#").toggle Toggle sortable
              
            .list-block.sortable
              ul
                li
                  .item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item 1
                      .item-after $10
                  .sortable-handler
                li
                  .item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item 2
                      .item-after $20
                  .sortable-handler
                li
                  .item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item 3
                      .item-after $30
                  .sortable-handler
                li
                  .item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item 4
                      .item-after $40
                  .sortable-handler
                li
                  .item-content
                    .item-media
                      i.icon.icon-f7
                    .item-inner
                      .item-title Item 5
                      .item-after $50
                  .sortable-handler
                

block scripts
  script.
    var myApp = new Framework7();

    var $$ = Dom7;

    $$('.open').on('click', function () {
      myApp.sortableOpen('.sortable');
    });
    $$('.close').on('click', function () {
      myApp.sortableClose('.sortable');
    });
    $$('.toggle').on('click', function () {
      myApp.sortableToggle('.sortable');
    });